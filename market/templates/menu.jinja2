<div class="wrap">
    <div class="row Header-rowMain">
        <div class="row-block Header-logo"><a class="logo" href="{{ url('product:index') }}"><img class="logo-image"
                                                                                                  src=" {{ static('img/logo.png') }} "
                                                                                                  alt="logo.png"/></a>
        </div>
        <nav class="row-block row-block_right Header-menu">
            <div class="menuModal" id="navigate">
                <ul class="menu menu_main">
                    <li class="menu-item"><a class="menu-link" href="{{ url('product:index') }}">{{ _('Главная') }}</a>
                    </li>
                    <li class="menu-item"><span class="menu-label menu-label_success">{{ _('Скидки') }}</span><a class="menu-link"
                                                                                                      href="{{ url('product:catalog') }}">{{ _('Каталог') }}</a>
                    </li>
                    <li class="menu-item">
                        <a class="menu-link" href="{{ url('comparison:comparison') }}">{{ _('Сравнение') }}</a>
                        <span id="comparisonCount">{{ comparison_count }}</span>
                    </li>

                </ul>
            </div>
        </nav>
        <div class="row-block">

            <div class="CartBlock">
                <div class="dropdown">
                    <button class="dropbtn"><img class="CartBlock-img" src="{{ static('img/icons/loon-icon.svg') }}"
                                                 alt="loon-icon.svg"/></button>
                    <div class="dropdown-content">
                        {% if request.user.is_authenticated %}
                            <a class="dropdown-content-a" href="{{ url('accounts:profile') }}">{{ _('Личный кабинет') }}</a>
                            {% if request.user.is_superuser %}
                                <a class="dropdown-content-a" href="{{ url('admin:index') }}">{{ _('Административный раздел') }}</a>
                            {% endif %}
                            <a class="dropdown-content-a" href="{{ url('accounts:logout') }}">{{ _('Выход') }}</a>
                        {% else %}
                            <a class="dropdown-content-a" href="{{ url('accounts:login') }}">{{ _('Вход') }}</a>
                            <a class="dropdown-content-a" href="{{ url('accounts:register') }}">{{ _('Регистрация') }}</a>
                        {% endif %}
                    </div>
                </div>
                <a class="CartBlock-block" href="{{ url('cart:cart') }}">
                    <img class="CartBlock-img" src="{{ static('img/icons/cart.svg') }}" alt="cart.svg"/>
                    <span class="CartBlock-amount">{{ cart_amount }}</span>
                </a>
                <div class="CartBlock-block">
                    <span class="CartBlock-price">{{ cart_cost }}</span>
                </div>
            </div>
        </div>
        <div class="row-block Header-trigger"><a class="menuTrigger" href="#navigate">
            <div class="menuTrigger-content">{{ _('Показать навигацию') }}
            </div>
            <span></span><span></span><span></span>
        </a>
        </div>
    </div>
</div>
