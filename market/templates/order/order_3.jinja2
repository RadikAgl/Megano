{% extends "base.jinja2" %}
{% block content %}
<div class="Section-columnSection">
    <header class="Section-header">
        <strong class="Section-title">{{  _("Прогресс заполнения") }}
        </strong>
    </header>
    <div class="Section-columnContent">
        <div class="NavigateProfile">
            <ul class="menu menu_vt">
                <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="#step1">{{ _("Шаг 3. Способ оплаты") }}</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="Section-content">
    <form class="form" method="post">
        {% csrf_token %}
        <div class="Order-block Order-block_OPEN" id="step1">
            <header class="Section-header Section-header_sm">
                <h2 class="Section-title">{{  _("Шаг 3. Способ оплаты") }}
                </h2>
            </header>
            <div>
                <label class="toggle">
                    <input type="radio" name="payment_type" value="card" checked="checked" /><span class="toggle-box"></span><span class="toggle-text">{{  _("Онлайн картой") }}</span>
                </label>
            </div>
            <div class="Order-footer">
                <button class="btn btn_success" type="submit">{{ _("Дальше") }}</button>
            </div>
            {% if messages %}
                {% for message in messages %}
                {{ message }}
                {% endfor %}
            {% endif %}
        </div>
    </form>
</div>
{% endblock %}
