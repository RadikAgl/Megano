{% extends 'base.jinja2' %}

<body class="Site">

{% block content %}
    <div class="wrapper">
        <div class="header">
            <h3 class="sign-in">{{ _('Восстановление пароля (2/2)') }}</h3>
            <h5>{{ _('Придумайте новый пароль для учетной записи') }}</h5>
        </div>

        <form method="post">
            {% csrf_token %}
            <div>
                <input type="password" name="new_password1" id="name" placeholder="Пароль"/>
            </div>
            <div>
                <input type="submit" value="Сохранить пароль"/>
            </div>
        </form>
        {% if messages %}
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
