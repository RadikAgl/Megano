{% extends 'base.jinja2' %}

{% block content %}
    <div class="wrapper">
        <div class="header">
            <h3 class="sign-in">{{ _('Регистрация') }}</h3>

        </div>
        <div class="clear"></div>
        <form method="post">
            {% csrf_token %}

            <div>
                <input class="user-input" type="email" name="email" id="a" placeholder="E-mail"/>
            </div>
            <div>

                <input type="password" name="password1" id="n" placeholder="{{ _('Пароль') }}"/>
            </div>
            <input type="submit" value="{{ _('Зарегистрироваться') }}"/>


            <a class="registr" href="{{ url('user:login') }}">
                Вход
            </a>
            <div class="clear"></div>

        </form>
        {% if messages %}
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
