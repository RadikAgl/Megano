{% extends "base.jinja2" %}
{% block content %}

    <div class="Middle Middle_top">
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">{{ _('Навигация') }}</strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="NavigateProfile">
                                <ul class="menu menu_vt">
                                    <li class="menu-item_ACTIVE menu-item">
                                        <a class="menu-link" href="{{ url('accounts:main') }}">{{ _('Личный кабинет') }}</a>
                                    </li>
                                    <li class="menu-item">
                                        <a class="menu-link" href="{{ url('accounts:profile') }}">{{ _('Профиль') }}</a>
                                    </li>
                                    <li class="menu-item">
                                        <a class="menu-link"
                                           href="{{ url('order:history_order') }}">{{ _('История заказов') }}</a>
                                    </li>
                                    <li>
                                        <a class="menu-link"
                                           href="{{ url('shops:shop_dashboard') }}">{{ _('Мой магазин') }}</a>
                                    </li>
                                    <li class="menu-item">
                                        <a class="menu-link"
                                           href="{{ url('accounts:viewing_history') }}">{{ _('История просмотров товаров') }}</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Section-content">
                    <div class="Account">
                        <div class="Account-group">
                            {% if paid %}
                                <p>{{ paid }}</p>
                            {% endif %}
                        </div>
                        <div class="Account-column">
                            <div class="Account-name">{{ name }}</div>
                            <a class="Account-editLink" href="{{ url('accounts:profile') }}">{{ _('Редактировать профиль') }}</a>
                        </div>
                    </div>
                    <div class="Account-group">
                        <div class="Account-column Account-column_full">
                            <div class="Order Order_anons">
                                <div class="Order-personal">
                                    <div class="row">
                                        <div class="row-block">
                                            <a class="Order-title" href="oneorder.html">{{ _('Заказ') }}&#32;<span
                                                    class="Order-numberOrder">№200</span>&#32;от&#32;<span
                                                    class="Order-dateOrder">21.07.2020</span></a>
                                            <div class="Account-editLink">
                                                <a href="historyorder.html">{{ _('История заказов') }}</a>
                                            </div>
                                        </div>
                                        <div class="row-block">
                                            <div class="Order-info Order-info_delivery">
                                                <div class="Order-infoType">{{ _('Тип доставки: ') }}</div>
                                                <div class="Order-infoContent">{{ _('Обычная доставка') }}</div>
                                            </div>
                                            <div class="Order-info Order-info_pay">
                                                <div class="Order-infoType">{{ _('Оплата:') }}</div>
                                                <div class="Order-infoContent">{{ _('Онлайн картой') }}</div>
                                            </div>
                                            <div class="Order-info">
                                                <div class="Order-infoType">{{ _('Общая стоимость: ') }}</div>
                                                <div class="Order-infoContent">{{ _('200.99') }}</div>
                                            </div>
                                            <div class="Order-info Order-info_status">
                                                <div class="Order-infoType">{{ _('Статус: ') }}</div>
                                                <div class="Order-infoContent">{{ _('Не оплачен') }}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
