{% extends 'base.jinja2' %}










        {% block content %}
        <div class="wrapper">
            <div class="header">
                <h3 class="sign-in">Вход</h3>
            </div>
            <div class="clear"></div>
            <form method="post">
                {% csrf_token %}
                <div>
                    <input class="user-input" type="text" name="email" id="name" placeholder="email"/>
                </div>
                <div>

                    <input type="password" name="password" id="name" placeholder="*********"/>
                </div>
                <div>
                    <input type="submit" value="Войти"/>
                    {% if messages %}
                        {% for message in messages %}
                            {{ message }}
                        {% endfor %}
                    {% endif %}

                </div>
                <a class="forgot-label" href={{ url("user:password_reset") }}>Забыли пароль?</a>
                <a class="registr" href="registr.html">
                    Регистрация
                </a>

            </form>

        </div>
        {% endblock %}





