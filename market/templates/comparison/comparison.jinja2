{% extends 'base.jinja2' %}

{% block content %}
    <div class="Middle">
        <div class="wrap">
            {% if comparison.products %}
                <div class="Product">
                    {% for product in comparison.products %}
                        <div class="ProductCard">
                            <div class="ProductCard-desc">
                                <div class="ProductCard-header">
                                    <h2 class="ProductCard-title">{{ product.name }}</h2>
                                    <div class="ProductCard-look">
                                        <div class="ProductCard-photo">
                                            {% if product.images.exists %}
                                                <img src="{{ product.images.first().image.url }}"
                                                     alt="{{ product.name }}"/>
                                            {% else %}
                                                <p>No image available</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="Tabs Tabs_default">
                                        <div class="Tabs-wrap">
                                            <div class="Tabs-block" id="description">
                                                <div class="table">
                                                    <table>
                                                        <tr>
                                                            <th class="hed">Характеристика</th>
                                                            <th class="hed">Значение</th>
                                                        </tr>
                                                        {% for key, value in product.details.items() %}
                                                            <tr>
                                                                <td>{{ key }}</td>
                                                                <td>{{ value }}</td>
                                                            </tr>
                                                        {% endfor %}
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="ProductCard-info">
                                    <div class="ProductCard-cost">
                                        <div class="ProductCard-price">
                                            {% if product.shops.all %}
                                                {% for shop in product.shops.all() %}
                                                    {% for offer in shop.offer_set.all() %}
                                                        {{ offer.price }} ,
                                                    {% endfor %}
                                                {% endfor %}
                                            {% else %}
                                                N/A
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <div class="ProductCard-cartElement">
                                    <form method="post" action="{{ url('comparison:comparison') }}">
                                        {% csrf_token %}
                                        <input type="hidden" name="product_id" value="{{ product.id }}">
                                        <input type="hidden" name="action" value="add">
                                        {% if product.id in comparison %}
                                            <button type="button" class="btn btn_disabled">Already in Comparison
                                            </button>
                                        {% else %}
                                            <button type="submit" class="btn btn_secondary">Add to Comparison</button>
                                        {% endif %}
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div>
                    No products in the comparison list
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
